<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shiro.mapper.PermissionMapper">
	<resultMap id="BaseResultMap" type="com.shiro.entity.Permission">
		<id column="id" property="id" jdbcType="INTEGER"/>
		<result column="permission_name" property="permissionName" jdbcType="VARCHAR"/>
		<result column="perms" property="perms" jdbcType="VARCHAR"/>

	</resultMap>
	
	<sql id="base_column_list">
		id,permission_name,perms
	</sql>

	<select id="selectListSelective" resultMap="BaseResultMap" parameterType="com.shiro.entity.Permission">
		select * from permission
		<where>
			<if test="id != null">
				and id = #{id,jdbcType=INTEGER}
			</if>
			<if test="permissionName != null">
				and permission_name = #{permissionName,jdbcType=VARCHAR}
			</if>
			<if test="perms != null">
				and perms = #{perms,jdbcType=VARCHAR}
			</if>
		</where>
	</select>
	
	
	<select id="selectPermissionByUserName" resultMap="BaseResultMap" parameterType="java.lang.String">
		select p.* from permission as p left join role_permission as rp on p.id = rp.permission_id left join user_role as ur on ur.role_id = rp.role_id 
		left join users as u on u.id = ur.user_id
		where username = #{userName,jdbcType=VARCHAR}
	</select>

	
	<insert id="insertSelective" parameterType="com.shiro.entity.PageEntity">
		insert into permission
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="permissionName != null">
				permission_name,
			</if>
			<if test="perms != null">
				perms,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="permissionName != null">
				#{userId,jdbcType=VARCHAR},
			</if>
			<if test="perms != null">
				#{perms,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>
	

</mapper>